@model Bookshop_v5.Models.Domain.Cart

<h2>Giỏ hàng của bạn</h2>

@if( ViewBag.CartItems.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Tên sách</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.CartItems)
            {
                <tr>
                    <td>@item.Book.Name</td>
                            <td>@item.Book.Price</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Quantity * item.Book.Price)</td>
                        </tr>
            }
                <tr>
                    <td colspan="3"><strong>Tổng tiền:</strong></td>
                <td>@ViewBag.TotalPrice</td>
                </tr>
            </tbody>
        </table>

    <form method="post" action="@Url.Action("ConvertCartToOrder", "Cart")">
        <button type="submit" class="btn btn-primary">Order</button>
    </form>
}
else
{
        <p>Không có sản phẩm nào trong giỏ hàng của bạn.</p>
}
