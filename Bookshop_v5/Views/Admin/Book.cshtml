@{
    Layout = "_Admin"; // hoặc Layout = "";
}
@using Bookshop_v5.Models.Domain
@using Bookshop_v5.Models.DTO

@model PaginationViewModel<Book>

<div class="row">
    <div class="col-md-3">
        <h4>Genres</h4>
        <ul class="list-group">
            <li class="list-group-item @if(Model.RouteValues["genre"] == 0){
            <text>active</text>
}"><a href="/Book/Index?genreId=0">All Genres</a></li>
            @foreach (var genre in Model.Genres)
            {
                <li class="list-group-item @if(Model.RouteValues["genre"] == genre.Id){
            <text>active</text>
}"><a href="/Book/Index?genreId=@genre.Id">@genre.Name</a></li>
            }
        </ul>
    </div>
    <div class="col-md-9">
        <h4>Books</h4>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.Items)
                {
                    <tr>
                        <td><a href="@Url.Action("Details", "Book", new { id = book.Id })">@book.Name</a></td>
                        <td>@book.Author.Name</td>
                        <td>@book.Genre.Name</td>
                    </tr>
                }
            </tbody>

        </table>
        <div class="pagination">
            @if (Model.TotalPages > 1)
            {
                <ul>
                    @if (Model.Page > 1)
                    {
                        <li><a href="/Book/Index?genreId=@Model.RouteValues["genre"]&amp;page=@(Model.Page - 1)&amp;pageSize=@Model.PageSize">Previous</a></li>
                    }
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="@if(Model.Page == i){
                <text>active</text>
}"><a href="/Book/Index?genreId=@Model.RouteValues["genre"]&amp;page=@i&amp;pageSize=@Model.PageSize">@i</a></li>
                    }
                    @if (Model.Page < Model.TotalPages)
                    {
                        <li><a href="/Book/Index?genreId=@Model.RouteValues["genre"]&amp;page=@(Model.Page + 1)&amp;pageSize=@Model.PageSize">Next</a></li>
                    }
                </ul>
            }
        </div>
    </div>
</div>

